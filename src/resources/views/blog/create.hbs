            <label for="name">Tên Blog</label>
            <input type="text" class="form-control" id="name" placeholder="Tên blog" name ="NameDepartment">
        </div>
        <div class="form-group">
            <label for="description">Mô tả Blog</label>
            <textarea type="text" class="form-control" id = "description" placeholder="Mô Tả blog" name = "DescriptionDepartment" row ="3"></textarea>
        </div>
        <div class="form-group">
            <label for="video">ID Video</label>
            <input type="text" class="form-control" id = "video" placeholder="ID video" name = "VideoId">
        </div>
       
        <button type="submit" class="btn btn-primary">Đăng</button>
    </form>
</div>